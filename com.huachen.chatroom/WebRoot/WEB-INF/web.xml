<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>com.huachen.chatroom</display-name>
  <listener>
    <listener-class>com.huachen.control.LoginAction</listener-class>
  </listener>
  <listener>
    <listener-class>com.huachen.listener.OnlineListListener</listener-class>
  </listener>
  <listener>
    <listener-class>com.huachen.listener.OnlineCountServletContextListener</listener-class>
  </listener>
  <listener>
    <listener-class>com.huachen.listener.OnlineCountHttpSessionListener</listener-class>
  </listener>
  <filter>
    <filter-name>IndexFilter</filter-name>
    <filter-class>com.huachen.filter.IndexFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>IndexFilter</filter-name>
    <url-pattern>/Index.jsp</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>Private</filter-name>
    <filter-class>com.huachen.filter.Private</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>Private</filter-name>
    <url-pattern>/AddFriend</url-pattern>
    <url-pattern>/AddRoom</url-pattern>
    <url-pattern>/ChangeNickName</url-pattern>
    <url-pattern>/Export</url-pattern>
    <url-pattern>/GetContents</url-pattern>
    <url-pattern>/QuitUser</url-pattern>
    <url-pattern>/ChangeNickName</url-pattern>
    <url-pattern>/Judge</url-pattern>
    <url-pattern>/ClearContents</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>com.huachen.filter.EncodingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>NoCacheFilter</filter-name>
    <filter-class>com.huachen.filter.NoCacheFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>NoCacheFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <welcome-file-list>
    <welcome-file>Index.jsp</welcome-file>
  </welcome-file-list>
</web-app>